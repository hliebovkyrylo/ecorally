{
  "extends": "../tsconfig/base.json",
  "include": [
    "."
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}